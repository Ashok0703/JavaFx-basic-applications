<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="459.0" prefWidth="522.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todolist.MainController">
   <children>
      <ListView fx:id="tasklist" blendMode="MULTIPLY" layoutX="35.0" layoutY="144.0" prefHeight="300.0" prefWidth="451.0" />
      <TextField fx:id="label" layoutX="35.0" layoutY="28.0" prefHeight="25.0" prefWidth="242.0" promptText="Enter The Task" />
      <ComboBox fx:id="category" layoutX="35.0" layoutY="71.0" prefHeight="25.0" prefWidth="242.0" promptText="Select The Category" />
      <Button fx:id="add" layoutX="35.0" layoutY="113.0" mnemonicParsing="false" onAction="#addTask" prefHeight="25.0" prefWidth="88.0" text="Add">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="rmv" layoutX="398.0" layoutY="113.0" mnemonicParsing="false" onAction="#removeTask" prefHeight="25.0" prefWidth="88.0" text="Remove">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="345.0" layoutY="19.0" prefHeight="37.0" prefWidth="154.0" text="ToDo List" textAlignment="CENTER">
         <font>
            <Font name="Calibri Bold" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
